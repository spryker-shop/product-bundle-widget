{% extends template('widget') %}

{% define data = {
    items: _widget.bundleItems
} %}

{% block body %}
    {% if data.items %}
        <label>{{ 'cart.item.bundle.description' | trans }}</label>
        <ul class="list list--bullet list--spacing text-small">
            {% for item in data.items %}
                <li class="list__item">{{ item.quantity }} x {{ item.name }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
