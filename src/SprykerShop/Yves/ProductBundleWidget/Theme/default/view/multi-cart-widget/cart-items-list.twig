{% extends template('widget') %}

{% define data = {
    items: _widget.items,
    itemDisplayLimit: _widget.itemDisplayLimit
} %}

{% block body %}
    <ul>
        {% for item in data.items | slice(0, data.itemDisplayLimit) %}
            <li>{{ item.name }}</li>
        {% endfor %}
        {% if data.itemDisplayLimit < data.items|length %}
            <li>&hellip;</li>
        {% endif %}
    </ul>
{% endblock %}
